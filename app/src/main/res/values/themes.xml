<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PlayRoll" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="colorPrimary">@color/mainColor</item>
    </style>

    <style name="Theme.PlayRoll.NoActionBar">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/mainColor</item>
        <item name="android:statusBarColor">@color/mainColor</item>

    </style>

    <style name="Theme.PlayRoll.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PlayRoll.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/mainColor</item>
    </style>

    <style name="SplashTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SplashTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
