<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Layout -->
    <style name="mainBackground">
        <item name="android:background">@drawable/fondo_principal</item>
    </style>

    <!-- Estilos de botones -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:maxHeight">8dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TextButton" parent="ButtonStyle">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LogButton" parent="ButtonStyle">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="borderWidth">1dp</item>
    </style>

    <!-- Imagenes-->
    <style name="ImageviewCustom">
        <item name="android:background"></item>
    </style>

    <!-- Tema base de la aplicación -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/mainColor</item>
        <!-- Otros atributos de tu tema -->
    </style>

    <!-- Tema base de la aplicación no action bar -->
    <style name="AppTheme.NoActionBar">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <color name="button_text_color">#FFFFFF</color>
</resources>
